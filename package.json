{
  "name": "micro-bots",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:prettier-fix": "prettier --write .",
    "lint:eslint": "eslint --max-warnings=5 src",
    "test": "jest",
    "deploy:dev": "DOTENV_CONFIG_PATH=.env.local NODE_OPTIONS='-r dotenv/config' serverless deploy --stage dev",
    "deploy:prod": "NODE_OPTIONS='-r dotenv/config' serverless deploy",
    "invoke": "DOTENV_CONFIG_PATH=.env.local NODE_OPTIONS='-r dotenv/config' serverless invoke local -f $npm_config_function"
  },
  "dependencies": {
    "@aws-sdk/client-eventbridge": "3.844.0",
    "@aws-sdk/client-ses": "3.844.0",
    "@sentry/node": "9.38.0",
    "@slack/web-api": "6.13.0",
    "axios": "1.10.0",
    "dayjs": "1.11.13",
    "dayjs-business-time": "1.0.4",
    "form-data": "4.0.3",
    "fuzzball": "2.2.2",
    "jspdf": "3.0.1",
    "pdf-lib": "1.17.1",
    "serverless-sentry-lib": "2.5.2"
  },
  "devDependencies": {
    "@eslint/js": "9.31.0",
    "@types/aws-lambda": "8.10.150",
    "@types/jest": "29.5.14",
    "@types/node": "20.17.46",
    "dotenv": "16.6.1",
    "esbuild": "0.25.6",
    "eslint": "9.31.0",
    "eslint-plugin-jest": "28.14.0",
    "eslint-plugin-only-warn": "1.1.0",
    "jest": "29.7.0",
    "jest-file-snapshot": "0.7.0",
    "mockdate": "3.0.5",
    "prettier": "3.6.2",
    "serverless": "3.40.0",
    "serverless-esbuild": "1.55.1",
    "serverless-prune-plugin": "2.1.0",
    "serverless-sentry": "2.5.3",
    "ts-jest": "29.4.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0"
  }
}
