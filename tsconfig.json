{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "inlineSources": true,
    "inlineSourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
